package models

case class User(username: String, email: String, age: Int) {
  
}

object User {

  def save(user: User) {
    DB.withConnection { implicit connection =>
      SQL(""" 
            INSERT INTO User(username, email, age) 
            VALUES({username}, {email}, {age})
      """).on(
          'username -> user.username,
          'email -> user.email,
          'age -> user.age
      ).executeUpdate
    }
  }
}